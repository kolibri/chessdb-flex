{% extends 'layout.html.twig' %}

{% block content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <label for="username">{{ 'form.login.label.username'|trans }}</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" />

        <label for="password">{{ 'form.login.label.password'|trans }}</label>
        <input type="password" id="password" name="_password" />

        <input type="hidden" name="_target_path" value="{{ path('game_list') }}" />

        <button type="submit">{{ 'form.login.label.submit'|trans }}</button>
    </form>
{% endblock %}
